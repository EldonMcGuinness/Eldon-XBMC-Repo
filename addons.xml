<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.eldon-xbmc-repo" name="Eldon's XBMC OUYA Addons" version="1.0.0" provider-name="Eldon McGuinness">
	<extension point="xbmc.addon.repository"
			   name="Eldon's XBMC OUYA Addons">
		<info compressed="false">https://raw.githubusercontent.com/EldonMcGuinness/Eldon-XBMC-Repo/stable/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/EldonMcGuinness/Eldon-XBMC-Repo/stable/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/EldonMcGuinness/Eldon-XBMC-Repo/stable</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Eldon's XBMC OUYA Addons</summary>
		<description lang="en">Handy OUYA Addons</description>
	</extension>
</addon>

<addon id="script.module.ouya-controller-pairing" name="Controller Pairing" version="1.1.1"  provider-name="Eldon McGuinness">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">
        Pair controllers with your OUYA
    </summary>
    <description lang="en">
        This add-on launches the OUYA controller pairing screen.
    </description>
  </extension>
</addon>

<addon id="script.module.ouya-discover-store" name="Discover Store" version="1.1.0"  provider-name="Eldon McGuinness">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">
        Launch the OUYA Discover Store
    </summary>
    <description lang="en">
        This add-on launches the OUYA Discover Store.
    </description>
  </extension>
</addon>

<addon id="script.module.ouya-netflix-launcher"
  name="Netflix"
  version="1.1.0"
  provider-name="Eldon McGuinness">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Netflix
    </summary>
    <description lang="en">This add-on launches the Netflix Android application.

Source: https://github.com/ProgressiveThinkin
Original: https://github.com/nuskunetworks</description>
  </extension>
</addon>
</addons>
